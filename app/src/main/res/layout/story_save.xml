<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StorySaveActivity"
    android:background="@drawable/storysave">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스토리 저장 완료"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="328dp"
        tools:ignore="MissingConstraints" />

    <android.widget.Button
        android:id="@+id/button"
        android:layout_width="170dp"
        android:layout_height="64dp"
        android:background="@drawable/storysave_gray_btn_border"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="홈으로 가기"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="655dp" />

    <android.widget.Button
        android:id="@+id/button2"
        android:layout_width="170dp"
        android:layout_height="64dp"
        android:background="@drawable/storysave_blue_btn_border"
        android:text="스토리 보내기"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="209dp"
        tools:layout_editor_absoluteY="655dp" />

    <android.widget.Button
        android:id="@+id/button3"
        android:layout_width="347dp"
        android:layout_height="64dp"
        android:text="스토리 바로가기"
        android:textSize="17sp"
        android:textColor="#99C1EC"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        android:background="@drawable/storysave_blue_btn_border2"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="478dp" />

    <LinearLayout
        android:layout_width="291dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="374dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/storysave_border">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="스토리"
            android:textSize="17sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10월 28일 출금내역"
            android:layout_gravity="center_vertical"
            android:textSize="17sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>